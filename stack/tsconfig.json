    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "lib": ["ES2020", "DOM"]
  },
  "include": ["scripts/**/*", "functions/**/*"],
  "exclude": ["node_modules"]
}
